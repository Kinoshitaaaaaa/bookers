<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th>Title</th><th>Body</th><th colspan="3"></th>
  </tr>
 </thead>
  <% @books.each do |book| %>
   <tbody>
    <tr>
     <tb><span><%=book.title %></span></tb>
     <tb><span><%=book.body %></span></tb>
     <tb><%=link_to"Show","/books/#{book.id}"%></tb>
     <tb><%=link_to"Edit",edit_book_path(book.id)%></tb>
     <tb><%=link_to"Destroy",book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" %></tb>
    </tr>
   </tbody>
  <% end %>
 </table>

<h1>New book</h1>
 <% if @book.errors.any? %>
 <%=@book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <%end%>
  </ul>
<% end %>

 <%=form_with model: @book do |f| %>
 <h4>Title</h4>
 <%=f.text_field:title %>
 <h4>Body</h4>
 <%=f.text_area:body %>
 <%=f.submit "Create Book" %>
<% end %>