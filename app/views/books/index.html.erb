<body>
<h1 class="index-title">Books</h1>
<table class="bookers-index">
 <thead class="index-column">
  <tr class="column">
   <th><p>Title</p></th>
   <th><p>Body</p></th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody class="post-index">
  <% @books.each do |book| %>
    <tr class="column">
     <td class=table-body><%=book.title %></td>
     <td class=table-body><%=book.body %></td>
     <td class=table-body><%=link_to"Show","/books/#{book.id}"%></td>
     <td class=table-body><%=link_to"Edit",edit_book_path(book.id)%></td>
     <td class=table-body><%=link_to"Destroy",book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" %></td>
    </tr>
  <% end %>
</tbody>
</table>

<h2>New book</h2>
 <% if @book.errors.any? %>
 <%=@book.errors.count %>errors prohibited this book from being saved:
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <%end%>
  </ul>
<% end %>

 <%=form_with model: @book do |f| %>
 <h4>Title</h4>
 <div class="text-field"><%=f.text_field:title %></div>
 <h4>Body</h4>
 <div class="text-area"><%=f.text_area:body %></div>
 <div class="post-button"><%=f.submit "Create Book" %></div>
<% end %>
</body>